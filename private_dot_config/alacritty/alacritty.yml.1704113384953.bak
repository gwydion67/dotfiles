window:
  padding:
    x: 10
    y: 10
  class:
    instance: Alacritty
    general: Alacritty
  opacity: 0.4
  decorations: full
  decorations_theme_variant: Dark

scrolling:
  history: 10000

font:
  size: 7
  normal:
    style: bold
draw_bold_text_with_bright_colors: true

window.dynamic_title: true

import:
  - ~/.config/alacritty/breeze.yaml

selection:
  save_to_clipboard: true

key_bindings:
  - {
      key: Return,
      mods: Super|Shift,
      action: SpawnNewInstance
    }
theme: breeze
